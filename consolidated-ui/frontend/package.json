{
  "name": "ruv-sparc-ui-dashboard-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc -b --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "preview": "vite preview",
    "test:e2e:workflows": "playwright test --config=playwright.config.e2e.ts",
    "test:e2e:docker": "docker-compose -f ../docker-compose.test.yml up -d && npm run test:e2e:workflows && docker-compose -f ../docker-compose.test.yml down",
    "test:e2e:ui": "playwright test --config=playwright.config.e2e.ts --ui",
    "test:e2e:debug": "playwright test --config=playwright.config.e2e.ts --debug",
    "test:e2e:headed": "playwright test --config=playwright.config.e2e.ts --headed",
    "test:e2e:chromium": "playwright test --config=playwright.config.e2e.ts --project=chromium",
    "test:e2e:firefox": "playwright test --config=playwright.config.e2e.ts --project=firefox",
    "test:e2e:webkit": "playwright test --config=playwright.config.e2e.ts --project=webkit",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "@codemirror/lang-json": "^6.0.2",
    "@daypilot/daypilot-lite-react": "^4.8.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@uiw/react-codemirror": "^4.25.3",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/xterm": "^5.5.0",
    "autoprefixer": "^10.4.21",
    "cron-parser": "^5.4.0",
    "dompurify": "^3.2.4",
    "fuse.js": "^7.1.0",
    "jotai": "^2.15.1",
    "katex": "^0.16.25",
    "lucide-react": "^0.554.0",
    "marked": "^4.3.0",
    "marked-extended-latex": "^1.1.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.5",
    "reactflow": "^11.11.4",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@axe-core/react": "^4.11.0",
    "@eslint/js": "^9.13.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "axe-core": "^4.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "msw": "^2.12.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "undici": "^6.22.0",
    "vite": "^7.2.2",
    "whatwg-fetch": "^3.6.20"
  }
}
