# Test Environment Configuration
# P2_T8 - Backend Testing Suite

# Environment
ENVIRONMENT=test
DEBUG=true

# Database Configuration (Test)
DATABASE_URL=postgresql+asyncpg://test:test@localhost:5433/test_db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration (Test)
REDIS_URL=redis://localhost:6380/0
REDIS_MAX_CONNECTIONS=10

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=1000

# Security (Test Keys - DO NOT USE IN PRODUCTION)
SECRET_KEY=test-secret-key-for-testing-only
JWT_SECRET_KEY=test-jwt-secret-key-for-testing-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_HEARTBEAT_TIMEOUT=60
WS_MAX_CONNECTIONS=100

# Memory MCP (Mock for Testing)
MEMORY_MCP_ENABLED=false  # Use mocks in tests
MEMORY_MCP_FALLBACK=true

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Testing
TESTING=true
TEST_DB_RESET=true  # Reset database between test runs
